<Window x:Class="OpenMacroBoard.VirtualBoard.VirtualBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenMacroBoard.VirtualBoard"
        RenderOptions.BitmapScalingMode="HighQuality"
        SizeToContent="WidthAndHeight"
        MinHeight="200"
        MinWidth="200"
        mc:Ignorable="d"
        Background="#141414"
        Title="Virtual Macro Board" Height="450" Width="800">
    <Viewbox Stretch="Uniform" Name="ViewBox">
        <local:VirtualBoardControl />
    </Viewbox>
</Window>
